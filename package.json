  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently -k \"cross-env BROWSER=none yarn start\" \"electron .\"",
    "electron:package:mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js --publish never",
    "electron:package:linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js ",
    "watch": "webpack --config webpack.common.js --watch",
    "publish": "electron-builder build  --win --publish always"
  },
  "build": {
    "generateUpdatesFilesForAllChannels": true,
    "appId": "com.electron.myapp",
    "productName": "HeroMovie",
    "copyright": "zuDskyy",
    "files": [
      "build/**/*",
      "node_modules/**/*"
